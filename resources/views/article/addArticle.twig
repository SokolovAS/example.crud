{% extends "site.twig" %}

{% block content %}

    <div class="col-md-8">
        <p align="right"><a href="/" class="glyphicon glyphicon-arrow-left"></a></p>
        <h1 class="page-header">Добавление записи</h1>

        {% if errors|length > 0 %}
            <div class="alert alert-danger">
                <div class="errors">
                    <ul>
                        {% for error in errors.all() %}
                            <li>{{ error }}</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        {% endif %}

        <div class="well">
            <h4>Заполните поля:</h4>
            <form role="form" action="{{ route('article.add') }}"   method="post">
                <div class="form-group">
                    <label for="title">Введите заголовок</label>
                    <input type="text" class="form-control" name="title">
                    <label>Введите текст записи</label>
                    <textarea name="text" class="form-control" cols="60" rows="10"> </textarea>

                        <p class="pull-right"><input type="submit" class="btn btn-primary" value="Отправить"></p>

                    <input type="hidden" name="_token" value="{{  csrf_token() }}">
                </div>
            </form>
        </div>
    </div>

{% endblock %}