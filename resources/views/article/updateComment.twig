{% extends "site.twig" %}

{% block content %}

    <div class="col-md-8">
        <p align="right"><a href="/" class="glyphicon glyphicon-arrow-left"></a></p>
        <h1 class="page-header">Редактировать комментарий</h1>

    {% if errors|length > 0 %}
        <div class="alert alert-danger">
            <div class="errors">
                <ul>
                    {% for error in errors.all() %}
                        <li>{{ error }}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    {% endif %}

    <div class="well">
        <h4>Заполните поля:</h4>
        <form role="form" action="{{ route('comment.update') }}"   method="post">
            <div class="form-group">
                <label for="email">Введите email</label>
                <input type="email" class="form-control"  name="email" value="{{ comment.email }}">
            </div>
            <div class="form-group">
                <label for="text">Введите текст комментария</label>
                <textarea name="text" class="form-control">{{ comment.text }}</textarea>
            </div>
           <p class="pull-right"><input type="submit" class="btn btn-primary" value="Отправить"></p>
            <input type="hidden" name="article_id" value={{ comment.article_id }}>
            <input type="hidden" name="id" value={{ comment.id }}>
            <input type="hidden" name="_token" value="{{  csrf_token() }}">
        </form>
    </div>

    </div>

{% endblock %}